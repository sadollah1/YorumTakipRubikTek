@model DatabaseAccessLayer.Entities.Yorum
@{ Layout = null;}
    <div class="container row" style="margin-top:200px;">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            @using (Html.BeginForm("YorumEkle", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group-lg">
                    <h2 class="title text-center">Yorum Ekle</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group col-md-12">
                        @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control", @placeholder = "Başlık" } })
                        @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group-lg col-md-12">
                        @Html.EditorFor(model => model.İcerik, new { htmlAttributes = new { @class = "form-control", @placeholder = "Yorum" } })
                        @Html.ValidationMessageFor(model => model.İcerik, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12" style="margin-top:30px;">
                        <input type="submit" name="submit" class="btn btn-primary pull-left" value="Yorum Ekle">
                    </div>
                </div>
            }
        </div>
        </div>

